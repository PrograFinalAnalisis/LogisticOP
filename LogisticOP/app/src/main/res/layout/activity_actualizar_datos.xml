<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aq"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.logisticop.logisticop.logisticop.ActualizarDatos">

    <TextView
        android:id="@+id/txttittle"
        style="@style/Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/tituloActualizarDatosRegistroClases"
        android:textSize="30dp" />

    <ListView
        android:id="@+id/listV"
        style="@style/ListViewStyle"
        android:layout_width="650dp"
        android:layout_height="650dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txttittle"
        android:layout_above="@+id/relativeLayout2" />

    <RelativeLayout
        android:layout_width="700dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/txttittle"
        android:layout_alignStart="@+id/txttittle"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout2">

        <Button

            android:id="@+id/btnVerRegistro"
            android:layout_width="250dp"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="3dp"
            android:background="@drawable/presionado"
            android:onClick="VerRegistro"
            android:text="Ver Registro Actividades"
            android:layout_gravity="bottom" />

        <Button
            android:textSize="16dp"
            android:id="@+id/btnmisdatos"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/presionado"
            android:onClick="MisDatos"
            android:text="@string/misactividades"
            android:layout_gravity="bottom"
            android:layout_alignBaseline="@+id/btnVerRegistro"
            android:layout_alignBottom="@+id/btnVerRegistro"
            android:layout_toRightOf="@+id/btnVerRegistro"
            android:layout_toEndOf="@+id/btnVerRegistro" />

        <Button
            android:textSize="16dp"
            android:id="@+id/btnEditar"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:background="@drawable/presionado"
            android:onClick="btnEditar"
            android:text="Editar"
            android:layout_gravity="bottom"
            android:layout_alignTop="@+id/btnVerRegistro"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</RelativeLayout>
