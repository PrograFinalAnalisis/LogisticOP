<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/verde"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnIngresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Ingresar"
        android:background="@drawable/presionadonegro"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/lbpass"
        android:layout_alignStart="@+id/lbpass" />

    <Spinner
        android:id="@+id/SP_usuarios"
        style="@style/holoSpinnerStyle"
        android:layout_width="350dp"
        android:layout_height="75dp"
        android:layout_marginTop="36dp"
        android:textAlignment="center"
        android:layout_below="@+id/Lbnombre"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/Lbnombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/NombreUsuario"
        android:textAppearance="?android:attr/textAppearanceMedium"
        style="@style/Header"
        android:textStyle="bold"
        android:textSize="21dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/lbpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pass"
        android:textAppearance="?android:attr/textAppearanceMedium"
        style="@style/Header"
        android:textSize="21dp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/SP_usuarios"
        android:layout_centerHorizontal="true" />

    <EditText
        style="@style/EditTextStyle"
        android:id="@+id/txtpass"
        android:layout_width="250dp"
        android:layout_height="56dp"
        android:gravity="center"
        android:layout_below="@+id/lbpass"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="57dp"
        android:ems="10"
        android:inputType="textPassword" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignBottom="@+id/btnIngresar"
        android:layout_alignTop="@+id/btnIngresar"
        android:layout_toLeftOf="@+id/Lbnombre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
