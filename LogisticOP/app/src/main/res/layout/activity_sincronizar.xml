<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.logisticop.logisticop.logisticop.Sincronizar"
    android:background="@drawable/v52"
    >

    <ListView
        android:id="@+id/SCHEDULE"
        android:layout_width="750dp"
        android:layout_height="550dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/lbNombreEmpleado">
    </ListView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Deseleccionar"
        android:id="@+id/btnDeseleccionar"
        android:layout_alignParentBottom="true"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
         android:text="@string/TituloSincronizar"
        android:id="@+id/lbTituloSincronizar"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        style="@style/HeaderOtro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/lbNombreEmpleado"
        android:text="Codigo"
        android:layout_below="@+id/lbTituloSincronizar"
        android:layout_alignRight="@+id/lbclientes"
        android:layout_alignEnd="@+id/lbclientes" />

    <TextView
        style="@style/HeaderOtro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nombre Producto"
        android:id="@+id/lbact_registrada"
        android:layout_above="@+id/SCHEDULE"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toEndOf="@+id/textView9"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp" />

    <TextView
        style="@style/HeaderOtro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cantidad de Cajas"
        android:id="@+id/lbfecha"
        android:layout_alignTop="@+id/lbact_registrada"
        android:layout_alignRight="@+id/SCHEDULE"
        android:layout_alignEnd="@+id/SCHEDULE" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignTop="@+id/SCHEDULE"
        android:layout_toLeftOf="@+id/lbact_registrada"
        android:layout_toStartOf="@+id/lbact_registrada"
        android:layout_marginTop="154dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView9"
        android:visibility="invisible"
        android:layout_above="@+id/btnDeseleccionar" />

    <TextView
        android:id="@+id/lbclientes"
        style="@style/Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/clientes"
        android:textAlignment="gravity"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="21dp"
        android:textStyle="bold"
        android:layout_above="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="55dp" />

    <Spinner
        android:id="@+id/Sp_clientes"
        style="@style/holoSpinnerStyle"
        android:layout_width="350dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/lbclientes"
        android:layout_alignRight="@+id/SCHEDULE" />



    <Button
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:text="Guardar"
        android:id="@+id/button2"
        android:onClick="BtnEnviar"
        android:background="@drawable/presionado"
        android:textSize="21dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/lbfecha"
        android:layout_alignStart="@+id/lbfecha"
        android:layout_alignRight="@+id/SCHEDULE"
        android:layout_alignEnd="@+id/SCHEDULE" />

    <Button
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:text="Escanear codigo"
        android:id="@+id/btnTodas"
        android:onClick="BtnTodasActividades"
        android:background="@drawable/presionado"
        android:textSize="21dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btnDeseleccionar"
        android:layout_alignEnd="@+id/btnDeseleccionar" />

</RelativeLayout>
