<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <!-- Se muestra el color verde en este caso al ser presionado  -->
            <gradient android:angle="270" android:endColor="#c5ff7b" android:startColor="#ccff78" />
            <!-- Aumento el borde agregando mas color negro  -->
            <stroke android:width="3dp" android:color="#03080b" />
            <corners android:radius="3dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
        <!--  este metodo hace el efecto de presionado-->
    </item>

    <item android:state_focused="true">
        <shape>
            <solid android:color="#67d2c8" />
            <!--si el focus esta activo -->
        </shape>
    </item>

    <item>
        <shape>
            <!-- por motivos de presentacion hago el fondo transparente con las
           propiedades que da android -->
            <gradient android:angle="270" android:endColor="@android:color/transparent" android:startColor="@android:color/transparent" />
            <!-- Defino el color del borde begro para cuando la imagen de fondo sea muy clara  -->
            <stroke android:width="2dp" android:color="#03080b" />
            <corners android:radius="3dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>

    </item>

</selector>