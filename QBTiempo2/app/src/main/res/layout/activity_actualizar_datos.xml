<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.qbtiempo.qbtiempo.qbtiempo.ActualizarDatos">

    <TextView android:text="@string/tituloActualizarDatosRegistroClases" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txttittle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listV"
        android:layout_below="@+id/txttittle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Registro Actividades"
        android:onClick="VerRegistro"
        android:id="@+id/btnVerRegistro"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar"
        android:onClick="btnEditar"
        android:id="@+id/btnEditar"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/listV"
        android:layout_alignEnd="@+id/listV" />

</RelativeLayout>
