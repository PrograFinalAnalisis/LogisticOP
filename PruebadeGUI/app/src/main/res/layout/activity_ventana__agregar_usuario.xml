<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.curso.pruebadegui.Ventana_Usuario">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nombre del cliente:"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editNombre"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Horario del cliente"
        android:id="@+id/textView4"
        android:layout_below="@+id/editNombre"
        android:layout_alignRight="@+id/buttonAgergarCliente"
        android:layout_alignEnd="@+id/buttonAgergarCliente"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hora de Inicio:"
        android:id="@+id/textView6"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/textView17"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hora de finalizaciÃ³n:"
        android:id="@+id/textView7"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/editHinicio"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editHinicio"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/editHfinal"
        android:layout_alignStart="@+id/editHfinal"
        android:layout_marginTop="25dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editHfinal"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/buttonAgergarCliente"
        android:layout_alignStart="@+id/buttonAgergarCliente"
        android:layout_marginTop="28dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar cliente"
        android:id="@+id/buttonAgergarCliente"
        android:onClick="onClick"
        android:layout_below="@+id/editHfinal"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Formato 24 horas"
        android:id="@+id/textView17"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/editHinicio"
        android:layout_alignStart="@+id/editHinicio" />

</RelativeLayout>
